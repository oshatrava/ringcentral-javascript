{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "esModuleInterop": true,

        /* Strict Type-Checking Options */
        "noImplicitAny": false,
        "noImplicitThis": true,
        "alwaysStrict": false,
    },
    "include": ["lib"],
}
